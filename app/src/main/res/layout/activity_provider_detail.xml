<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_color"
    tools:context=".ui.ActivityProviderDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_color"
            android:elevation="@dimen/toolbar_elevation">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/logo_in_toolbar" />

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="left"
                    android:background="?attr/actionBarItemBackground"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_back_white"
                    android:tint="@color/toobar_icon_color" />

            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".ui.ActivityProviderDetail"
                tools:showIn="@layout/activity_provider_detail">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <net.umaass_user.app.utils.CircleImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtDrName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start|center"
                            android:paddingStart="10dp"
                            android:text=""
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="19dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/txtExpertise"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start|center"
                            android:paddingStart="10dp"
                            android:text=""
                            android:textColor="@color/secondaryPrimaryText"
                            android:textSize="15dp" />

                        <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/ratingBar"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="4dp"
                            android:isIndicator="true"
                            android:progressTint="@color/colorAccent" />

                        <TextView
                            android:id="@+id/txtPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawableStart="@drawable/ic_call_black_18dp"
                            android:drawablePadding="5dp"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:gravity="start|center"
                            android:paddingStart="10dp"
                            android:text=""
                            android:textColor="@color/colorAccent"
                            android:textSize="15dp" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/btnGallery"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="end"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="0.25"
                            android:background="@drawable/round_item"
                            android:gravity="center"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:text="@string/gallery"
                            android:textColor="@color/secondaryPrimaryText"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/btnAddress"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="end"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="0.25"
                            android:background="@drawable/round_item"
                            android:gravity="center"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:text="@string/address"
                            android:textColor="@color/secondaryPrimaryText"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/btnComments"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="end"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="0.25"
                            android:background="@drawable/round_item"
                            android:gravity="center"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:text="@string/comments"
                            android:textColor="@color/secondaryPrimaryText"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/btnWork"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="end"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="0.25"
                            android:background="@drawable/round_item"
                            android:gravity="center"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:text="@string/working_hours"
                            android:textColor="@color/secondaryPrimaryText"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/round_item_no_border"
                        android:minHeight="60dp"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="4dp"
                            android:drawablePadding="10dp"
                            android:gravity="start|center"
                            android:paddingStart="10dp"
                            android:text="@string/about"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:id="@+id/txtBio"
                            android:layout_marginBottom="5dp"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:textColor="@color/secondaryPrimaryText"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_map_black"
                            android:drawablePadding="10dp"
                            android:gravity="start|center"
                            android:text="@string/address"
                            android:textColor="@color/secondaryPrimaryText"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="5dp"
                            android:gravity="start|center"
                            android:text=""
                            android:textColor="@color/secondaryPrimaryText"
                            android:textSize="12dp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/txtDescTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawableStart="@drawable/ic_wb_incandescent_black_24dp"
                            android:drawablePadding="10dp"
                            android:gravity="start|center"
                            android:text="@string/description"
                            android:textColor="@color/secondaryPrimaryText"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="5dp"
                            android:gravity="start|center"
                            android:text=""
                            android:textColor="@color/secondaryPrimaryText"
                            android:textSize="12dp"
                            android:textStyle="normal" />


                        <TextView
                            android:id="@+id/txtGallery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="4dp"
                            android:drawableStart="@drawable/ic_photo_album_black_24dp"
                            android:drawablePadding="10dp"
                            android:gravity="start|center"
                            android:paddingStart="20dp"
                            android:text="@string/gallery"
                            android:textColor="@color/secondaryPrimaryText"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewGallery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:paddingStart="15dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="15dp"
                            android:paddingBottom="5dp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="4dp"
                    android:drawablePadding="10dp"
                    android:gravity="start|center"
                    android:paddingStart="20dp"
                    android:text="@string/services"
                    android:textColor="@color/secondaryPrimaryText"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="15dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:drawableStart="@drawable/ic_stethoscope"
                        android:drawablePadding="10dp"
                        android:gravity="start|center"
                        android:text="@string/staff"
                        android:textColor="@color/secondaryPrimaryText"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewStaff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_place_black"
                        android:drawablePadding="10dp"
                        android:gravity="start|center"
                        android:textColor="@color/secondaryPrimaryText"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <net.umaass_user.app.ui.components.RoundCornerButton
                        android:id="@+id/btnBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        app:rc_text="@string/book" />

                    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/adView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        ads:adSize="SMART_BANNER"
                        ads:adUnitId="@string/banner_ad_unit_id_4" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="0dp">

                        <net.umaass_user.app.utils.SqureFramLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <fragment
                                android:id="@+id/map"
                                class="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </net.umaass_user.app.utils.SqureFramLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>